@model System.Web.Mvc.HandleErrorInfo

@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
 
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>خطأ داخلي في التطبيق</title>
    @Styles.Render("~/Content/DashBoardCss")

 
</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <!-- page content -->
            <div class="col-md-12">
                <div class="col-middle">
                    <div class="text-center">
                        <h1 class="error-number">خطأ</h1>
                        <h2>حدث خطأ داخلي في التطبيق</h2>
                        <hr />

                        <div class="mid_center">
                            <h3>

                                <a style="" class="btn btn-success " title="الذهاب للقائمة الرئيسية" href="@Url.Action("Index","Home")">الذهاب للقائمة الرئيسية</a>
                                <br />
                                <a id="anch" style="" class="btn btn-danger " title="الذهاب للقائمة الرئيسية" href="#">عرض رسالة الخطأ</a>

                            </h3>
                            
                        </div>
                    </div>
                </div>
            </div>
            <!-- /page content -->
        </div>
        <!-- footer content -->
    </div>

   
</body>
@Scripts.Render("~/Content/DashBoardjs")

</html>
<script type="text/javascript">

    $(document).ready(function () {

        $("#anch").click(function () {

            alert('@Model.Exception.Message');
        });

    });

  
    
</script>
